<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorUsuario</servlet-name>
        <servlet-class>Controladores.ControladorUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorClientes</servlet-name>
        <servlet-class>Controladores.ControladorClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador_Productos</servlet-name>
        <servlet-class>Controladores.Controlador_Productos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cont_Reporte</servlet-name>
        <servlet-class>Controladores.Cont_Reporte</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador_Compra</servlet-name>
        <servlet-class>Controladores.Controlador_Compra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cont_Grafica</servlet-name>
        <servlet-class>Controladores.Cont_Grafica</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorUsuario</servlet-name>
        <url-pattern>/ControladorUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorClientes</servlet-name>
        <url-pattern>/ControladorClientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador_Productos</servlet-name>
        <url-pattern>/Controlador_Productos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cont_Reporte</servlet-name>
        <url-pattern>/Cont_Reporte</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador_Compra</servlet-name>
        <url-pattern>/Controlador_Compra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cont_Grafica</servlet-name>
        <url-pattern>/Cont_Grafica</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
